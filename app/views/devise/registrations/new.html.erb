<section class="loginContainer">
  <div class="screenBody">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render partial:"application/header", locals:{description:"REGISTER",btn_description:"Next",f:f}%>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"Full Name" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email" %>
    <%= f.password_field :password, autocomplete: "new-password",placeholder:"Password (min six)" %>   
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Password confirmation" %>
<% end %>
</section>


